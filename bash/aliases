# bash
alias ls='ls -G'
alias ll='ls -lah'
alias reload="source ~/.dotfiles/bashrc"

alias reload_bundles="osascript -e 'tell app \"TextMate\" to reload bundles'"
alias pgc="pg_ctl -D $HOME/Databases/postgresql9 -l $HOME/Databases/postgresql9/postgresql.log $1"
alias psn="ps aux | grep $1"

alias pgtunnel="ssh -L 5433:pgmaster:5432 -N skatstube.de"
alias mysqltunnel="ssh -L 3307:dbmaster:3306 -N sauspiel.de"

# ruby, rails
alias ett='mate app/ db/ lib/ config/ public/ spec/ test/ features/'
alias r='rake'